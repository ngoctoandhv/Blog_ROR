<h4 class="d-flex justify-content-between mb-4">
  <span>Posts</span>
  <%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
</h4>

<% @posts.each do |post| %>
  <%= link_to post, class: "text-decoration-none" do %>
    <div class="card mb-3 post-card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-2">
            <% if post.header_image.present? %>
              <div class="header-img">
                <%= image_tag(post.header_image, width: '100%') %>
              </div>
            <% end %>
          </div>
          <div class="col-md-10">
            <h5 class="card-title mb-1 text-dark"><%= post.title %></h5>
            <p class="card-text text-secondary mb-0"><%= post.description %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
